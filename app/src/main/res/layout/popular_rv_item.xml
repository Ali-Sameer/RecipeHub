<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="210dp"
        android:layout_height="190dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        
        
        <ImageView
            android:id="@+id/popuar_img"
            android:layout_width="match_parent"
            android:src="@drawable/pizza_sample"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>
        
        <ImageView
            android:id="@+id/img_gradient"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:src="@drawable/image_btm_overlay"
            android:layout_height="150dp"/>

        <TextView
            android:id="@+id/popular_text"
            android:layout_width="wrap_content"
            android:text="Here is the sample of text"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="22dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/popular_textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/poppins_medium"
            android:maxLength="10"
            android:text=" 20Min"
            android:textColor="@color/white"
            android:textSize="11sp" />


        <ImageView
            android:id="@+id/popular_textTime1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/clock_ic_white"
            android:layout_gravity="bottom"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="7dp"



         />
        
    </androidx.cardview.widget.CardView>
</LinearLayout>